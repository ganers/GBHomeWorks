        <Label Content="Зарплата" HorizontalAlignment="Left" Margin="385,10,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TBAddNewEmployeeFirstName" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TBAddNewEmployeeLastName" HorizontalAlignment="Left" Height="23" Margin="135,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TBAddNewEmployeeSalary" HorizontalAlignment="Left" Height="23" Margin="385,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
