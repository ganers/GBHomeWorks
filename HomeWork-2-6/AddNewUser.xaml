        <Button x:Name="btnAddNewEmployeeOk" Content="ОК" HorizontalAlignment="Left" Margin="350,82,0,0" VerticalAlignment="Top" Width="75" Click="btnAddNewEmployeeOk_Click"/>
        <DatePicker x:Name="DPAddNewEmployeeBirthday" HorizontalAlignment="Left" Margin="260,41,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
